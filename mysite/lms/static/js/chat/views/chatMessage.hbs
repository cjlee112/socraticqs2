<div class="chat-message chat-message-text {{#if userMessage}} chat-message-user {{/if}}" data-thread-id={{threadId}} data-message-id="{{id}}">
  <div class="chat-container">
    <div class="inner">
      {{#if avatar }}
      <img src="{{avatar}}" alt="{{name}}" class="chat-avatar">
      {{else if initials}}
      <div class="chat-avatar {{#if userMessage}} chat-avatar--student-initials {{else}} chat-avatar--instructor-initials {{/if}}">{{initials}}</div>
      {{else}}
      <img src="{{defaultAvatar}}" alt="{{name}}" class="chat-avatar">
      {{/if}}
      <div class="chat-bubble">
        {{{html}}}

        <span class="chat-new-msg">
            new
        </span>

        {{#if overflow}}
          <div class="chat-actions">
            <div class="chat-actions-toggle"><span></span><span></span><span></span></div>

            <ul>
              {{#each overflow}}
              <li data-action="{{action}}">{{text}}</li>
              {{/each}}
            </ul>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
